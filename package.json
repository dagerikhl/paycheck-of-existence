{
    "name": "paycheck-of-existence",
    "version": "0.1.0",
    "description": "Personal tool to keep track of hours worked each week",
    "author": "Dag Erik Homdrum LÃ¸vgren <dagerikhl@gmail.com> (https://github.com/dagerikhl)",
    "scripts": {
        "start": "npm-run-all -l -p watch-css start-js",
        "start-js": "react-scripts-ts start",
        "build": "npm run build-css && react-scripts-ts build",
        "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
        "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
        "lint": "npm-run-all --silent --aggregate-output -c -l -p lint-css lint-js",
        "lint-js": "tslint -p . -c tslint.json src/**/*.{ts,tsx}",
        "lint-css": "stylelint --config=.stylelintrc src/**/*.scss",
        "deploy": "firebase deploy",
        "eject": "react-scripts-ts eject"
    },
    "dependencies": {
        "node-sass-chokidar": "^1.3.3",
        "npm-run-all": "^4.1.3",
        "react": "^16.5.2",
        "react-dom": "^16.5.2",
        "react-redux": "^5.0.7",
        "react-router-dom": "^4.3.1",
        "react-scripts-ts": "3.1.0",
        "redux": "^4.0.0",
        "redux-thunk": "^2.3.0"
    },
    "devDependencies": {
        "@types/node": "^10.11.3",
        "@types/react": "^16.4.14",
        "@types/react-dom": "^16.0.8",
        "@types/react-redux": "^6.0.9",
        "@types/react-router-dom": "^4.3.1",
        "firebase-tools": "^4.2.1",
        "pre-commit": "^1.2.2",
        "redux-devtools-extension": "^2.13.5",
        "stylelint": "^9.6.0",
        "stylelint-config-standard": "^18.2.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-sonarts": "^1.8.0",
        "typescript": "^3.1.1"
    },
    "main": "src/index.ts",
    "license": "GPL-3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/dagerikhl/paycheck-of-existence"
    },
    "private": false,
    "pre-commit": [
        "lint"
    ]
}
