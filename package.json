{
  "name": "paycheck-of-existence",
  "version": "2.4.0",
  "description": "Personal tool to keep track of hours worked each week",
  "author": "Dag Erik Homdrum LÃ¸vgren <dagerikhl@gmail.com> (https://github.com/dagerikhl)",
  "scripts": {
    "start": "npm-run-all -l -p watch-css start-js",
    "build": "npm run build-css && react-scripts-ts build",
    "build-css": "node-sass --include-path ./node_modules/ src/ -o src/",
    "start-js": "react-scripts-ts start",
    "watch-css": "node-sass --include-path ./node_modules/ src/ -o src/ --watch",
    "lint": "npm-run-all --silent --aggregate-output -c -l -p lint-css lint-js",
    "lint:prod": "npm-run-all --silent --aggregate-output -c -l -p lint-css lint-js:prod",
    "lint-js": "tslint -p . -c tslint.json src/**/*.{ts,tsx}",
    "lint-js:prod": "tslint -p . -c tslint.prod.json src/**/*.{ts,tsx}",
    "lint-css": "stylelint --config=.stylelintrc src/**/*.scss",
    "hint": "hint http://localhost:3000",
    "commit": "git-cz",
    "release": "standard-version",
    "deploy": "firebase deploy -P staging",
    "deploy:prod": "firebase deploy -P default",
    "prodset": "npm run release && npm run build && npm run deploy:prod",
    "eject": "react-scripts-ts eject"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "firebase": "6.3.0",
    "immutable": "4.0.0-rc.12",
    "moment": "2.24.0",
    "node-sass": "4.12.0",
    "normalize.css": "8.0.1",
    "npm-run-all": "4.1.5",
    "re-reselect": "3.3.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-redux": "7.1.0",
    "react-router-dom": "5.0.1",
    "react-scripts-ts": "3.1.0",
    "redux": "4.0.4",
    "redux-thunk": "2.3.0",
    "reselect": "4.0.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/classnames": "2.2.9",
    "@types/node": "12.6.2",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@types/react-redux": "7.1.1",
    "@types/react-router-dom": "4.3.4",
    "@types/uuid": "3.4.5",
    "commitizen": "3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "firebase-tools": "7.1.0",
    "hint": "5.0.2",
    "pre-commit": "1.2.2",
    "redux-devtools-extension": "2.13.8",
    "standard-version": "6.0.1",
    "stylelint": "10.1.0",
    "stylelint-config-standard": "18.3.0",
    "stylelint-scss": "3.9.1",
    "tslint-eslint-rules": "5.4.0",
    "tslint-sonarts": "1.9.0",
    "typescript": "3.5.3"
  },
  "main": "src/index.tsx",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/dagerikhl/paycheck-of-existence"
  },
  "private": false,
  "pre-commit": [
    "lint:prod"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
