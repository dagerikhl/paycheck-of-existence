{
    "defaultSeverity": "warn",
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier",
        "tslint-eslint-rules",
        "tslint-sonarts"
    ],
    "rules": {
        "arrow-parens": true,
        "arrow-return-shorthand": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "jsx-boolean-value": false,
        "member-ordering": false,
        "no-default-export": true,
        "no-small-switch": false,
        "no-unnecessary-callback-wrapper": true,
        "object-literal-sort-keys": false,
        "only-arrow-functions": true,
        "prefer-optional": true,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ]
    },
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts"
        ]
    }
}
