{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier",
        "tslint-eslint-rules",
        "tslint-sonarts"
    ],
    "rules": {
        "arrow-parens": true,
        "arrow-return-shorthand": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "no-unnecessary-callback-wrapper": true,
        "only-arrow-functions": true,
        "prefer-optional": true,
        "semicolon": [
            true,
            "always"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ]
    },
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts"
        ]
    }
}
